<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#BFCEE7"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F2F3"
        android:backgroundTint="#EDEEF0"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="8dp"
            android:text="مرکز شماره 1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sensorboxtop"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="16dp"
            app:cardCornerRadius="30dp">

            <TextView
                android:id="@+id/temp1TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text=":دمای 1"
                android:textColor="#39D88F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/temp1ValueTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="25.2"
                android:textColor="#39D88F"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sensorboxmiddle"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/temp2TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text=":دمای 2"
                android:textColor="#39D88F"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/temp2ValueTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="25.2"
                android:textColor="#39D88F"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sensorboxbottom"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/humidityTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="رطوبت کل مرکز:"
                android:textColor="#598CEC"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/humidityValueTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="50"
                android:textColor="#598CEC"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>